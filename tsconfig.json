{
    "compileOnSave": false,
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
            "tsBuildInfoFile": null
        }
    },
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./",
        "rootDir": "./",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "tsBuildInfoFile": null,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./index.ts",
        "./src/**/*.ts",
        "./src/Declarations/json.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
