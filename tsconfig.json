{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
